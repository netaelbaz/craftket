<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaymentActivity"
    android:background="@color/backgroundColor">

    <Toolbar
        android:id="@+id/pay_TOOL_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:navigationIcon="@drawable/outline_arrow_back_ios_new_24"/>

    <TextView
        android:layout_below="@+id/pay_TOOL_navigation"
        android:id="@+id/pay_TXT_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/default_margin"
        android:textSize="@dimen/titleSize"
        android:text="Title"
        />
    <TextView
        android:id="@+id/pay_TXT_hour"
        android:textColor="@color/textColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        android:textSize="22sp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/pay_TXT_title"
        />
    <TextView
        android:id="@+id/pay_TXT_date"
        android:textColor="@color/textColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        android:textSize="22sp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/pay_TXT_title"
        />
<!--    <TextView-->
<!--        android:textColor="@color/black"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_margin="@dimen/default_margin"-->
<!--        android:textSize="26sp"-->
<!--        android:layout_alignParentStart="true"-->
<!--        android:layout_below="@+id/pay_TXT_date"-->
<!--        android:text="Total"-->
<!--        />-->
    <TextView
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        android:textSize="22sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/pay_TXT_date"
        android:drawableEnd="@drawable/shekel_big"
        android:text="Total: "
        android:id="@+id/pay_TXT_price"
        />

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PAY"
        android:layout_below="@+id/pay_TXT_price"
        android:backgroundTint="@color/orange"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/textSize"
        android:id="@+id/pay_BTN_submit"
        android:layout_margin="@dimen/default_margin"
        />
</RelativeLayout>